<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:C:/database/test_ing</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</property>
        <property name="show_sql">true</property>
        <mapping resource="com/tmn/account/model/Account.hbm.xml"/>
        <mapping resource="com/tmn/account/model/User.hbm.xml"/>
        <mapping resource="com/tmn/account/model/TransactionHistory.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
